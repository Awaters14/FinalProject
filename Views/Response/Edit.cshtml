@model Response  @{     string title = ViewBag.Action + " Response";     ViewBag.Title = title;}<h2>@ViewBag.Title</h2><form asp-action="Edit" method="post">    <div asp-validation-summary="All" class="text-danger"></div> <div class="form-group">        <label asp-for="name">Name</label> <input asp-for="name" class="form-control">    </div>    <div class="form-group">        <label asp-for="problem">Problem</label> <input asp-for="problem" class="form-control">    </div>    <div class="form-group">        <label asp-for="address">Address</label> <input asp-for="address" class="form-control">    </div> <input type="hidden" asp-for="ResponseId" />    <div class="form-group">        <label asp-for="state">State</label> <input asp-for="state" class="form-control">    </div> <input type="hidden" asp-for="ResponseId" />    <div class="form-group">        <label asp-for="zipcode">Zipcode</label> <input asp-for="zipcode" class="form-control">    </div> <input type="hidden" asp-for="ResponseId" />    <div class="form-group">        <label asp-for="priorityId">Priority</label>             <select asp-for="priorityId" class="form-control">                <option value="">Select a priority</option>                @foreach (Priority p in ViewBag.Priority)
            {
                <option value="@p.priorityId">@p.priorityValue</option>
            }            </select>    </div>    <button type="submit" class="btn btn-primary">@ViewBag.Action</button> <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a></form>